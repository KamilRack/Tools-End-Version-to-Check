<body id="scroll-container">
    @if ((string)ViewData["Title"] != "Logowanie")
    {
        <header>
            {

            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-4 fixed-top">
